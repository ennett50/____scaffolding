html
	size(100%, 100%)
html
	height: 100%;

body
	base-font()
	min-height 100%
	if $wrapper_min_width > 0px
		min-width $wrapper_min_width + ($wrapper_padding*2)
	else
		if $wrapper_width > 0px
			min-width $wrapper_width + ($wrapper_padding*2)

.wrapper-content
	if $wrapper_max_width > 0px
		max-width $wrapper_max_width
	if $wrapper_min_width > 0px
		min-width $wrapper_min_width
	if $wrapper_width > 0px
		width $wrapper_width
	margin 0 auto
	padding 0 $wrapper_padding
	
.block
	display block !important

.inlineBlock
	display inline-block !important

.table
	display table
	width 100%

	&-cell
		display table-cell
		vertical-align top

	&-row,
	&-rows
		display table-row

	&-column,
	&-columns
		display table-column
main
// 	b, strong
