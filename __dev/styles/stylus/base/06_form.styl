.form
	position relative
	&-item
		margin-bottom 18px
		&-column
			width 210px
			margin-left 26px
			&:first-of-type
				margin-left 0
		&.error
			.ui-select-wrapper
				.ui-selectmenu-button
					border 1px solid #f0b8b8 !important

	.req
		font-size: 12px;
		color: #db2a2a;
		position: relative;
		top: -5px;
	textarea
		height 168px

	label
		font-size 14px
		text-align left
		color #000
		display block
		margin-bottom 10px
	input,
	textarea
		& + label
			display inline-block
			vertical-align middle
			margin-bottom 0
			margin-left 10px

	&.error
		input,
		textarea
			border 1px solid #f0b8b8 !important
			box-shadow 0 0 5px rgba(219,42,42, 0.20) !important


.error-msg
	margin-top 10px
	display inline-block
	margin-left 10px
	color #db2a2a
	font-size 14px
	text-align left

