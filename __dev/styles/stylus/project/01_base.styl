body
	background #f2f2f2

main
	position relative

.wrapper-content
	clear()


main a,
.link
	padding 0
	margin 0
	border 0
	background transparent
	display inline
	color #1a70c3
	trans()
	text-decoration none
	&:hover
		color #3a95ec
		text-decoration none
	&:focus
		color #3a95ec
		text-decoration none

.content
	padding-bottom 470px

p
	line-height 1.2
	margin-bottom 1.2em


.inner-content,
.aside-content
	margin-top 15px

.inner-content
	display block
	width 100%

			
