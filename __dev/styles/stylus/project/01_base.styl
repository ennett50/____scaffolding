.deep-shadow
	background-color #fff
	box-shadow inset 0 0 29px rgba(225,225,225,.55)

.round-border
	display inline-block
	border 1px solid #f2f2f2
	background white
	border-radius 5px
	margin-right 5px
	margin-bottom 5px
	position relative
	size(61px)
	&:hover
		border-color #3ea0fd
	&:active,
	&.__current
		border-color #1978ce
	&.__small
		size(44px)
		border-radius 3px
	img
		position absolute
		top 0
		bottom 0
		left 0
		right 0
		margin auto
		max-width 95%
		max-height 95%


.not-in-stock
	color #a7a7a7
	&:before
		content ''
		display inline-block
		vertical-align middle
		size(8px, 7px)
		background images('icons/cross.png') center no-repeat
		margin-right 7px